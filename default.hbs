<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>{{meta_title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/main.css"}}" />
    {{ghost_head}}
</head>


<body class="{{body_class}}">

    {{{body}}}

    <!-- Uncomment this when Ghost fully implements the Subscribers feature. Make sure you remove MailChimp ones
    {{#if @labs.subscribers}}
        <section class="subscribe-section">
            <h3>Subscribe to Newsletter</h3>
            {{subscribe_form
                form_class="subscribe-form-inline"
                input_class="subscribe-input"
                button_class="btn subscribe-btn"
                placeholder="Your email address"
            }}
        </section>
    {{/if}}
    -->

    <section class="subscribe-section-inline">
        <h2>Subscribe to Newsletter</h2>
        <div id="subscription-form" class="subscription-form-mc">
            <!-- Begin MailChimp Signup Form -->
            <div id="mc_embed_signup">
                <form action="https://markopapic.us17.list-manage.com/subscribe/post?u=d5239c4cbeaedea34a67b61fa&amp;id=509e70d6a0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">  
                        <div class="mc-field-group input-group">
                            <label>Send new blog posts: </label>
                            <ul>
                                <li><input type="radio" value="daily" name="MMERGE3" id="mce-MMERGE3-0"><label for="mce-MMERGE3-0">daily</label></li>
                                <li><input type="radio" value="weekly" name="MMERGE3" id="mce-MMERGE3-1"><label for="mce-MMERGE3-1">weekly</label></li>
                            </ul>
                        </div>
                        <div class="mc-field-group">
                            <label for="mce-EMAIL">Email </label>
                            <input type="email" value="" placeholder="someone@example.com" name="EMAIL" class="required email" id="mce-EMAIL">
                        </div>
                        <div id="mce-responses" class="clear">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_d5239c4cbeaedea34a67b61fa_509e70d6a0" tabindex="-1" value=""></div>
                        <div class="clear submit-field-group"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button btn"></div>
                    </div>
                </form>
            </div>
            <!--End mc_embed_signup-->
        </div>
    </section>

    <div id="floating-subscribe">
        <a href="#subscription-form" class="close-floating-subscribe floating-subscribe-text">Subscribe <i class="fa fa-envelope" aria-hidden="true"></i></a>
        <span id="close-floating-message" class="close-floating-subscribe"><i class="fa fa-times" aria-hidden="true"></i></span>
    </div>

    <footer class="site-footer">
        <div class="footer-contact">
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-envelope" title="Email" href="mailto:marko@markopapic.com" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-skype" title="Skype" href="skype:live:marko_3268?userinfo" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-linkedin" title="LinkedIn" href="https://www.linkedin.com/in/papicmarko" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-github" title="GitHub" href="https://github.com/markopapic" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-twitter" title="Twitter" href="https://www.twitter.com/papicmarko" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-facebook" title="Facebook" href="https://www.facebook.com/papicmarko" target="_blank"></a>
            </div>
            <div class="contact-link-wrapper">
                <a class="contact-link fa fa-instagram" title="Instagram" href="https://www.instagram.com/marko__papic" target="_blank"></a>
            </div>
        </div>
        <div class="footer-copyright">&copy; <span class="footer-site-title">{{@blog.title}}</span> all rights reserved.</div>
    </footer>

    {{{block "scripts"}}}

    <script src="{{asset "js/navigation-menu-toggle.js"}}"></script>
    <script src="{{asset "js/floating-subscribe.js"}}"></script>
    {{ghost_foot}}
</body>

</html>