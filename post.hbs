{{!< default}}

{{#post}}

<header class="site-header {{#if @blog.cover_image}} with-cover" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
        <nav class="site-navigation">
            {{#if @blog.navigation}}
                <button id="navigation-menu-button" class="menu-button" aria-haspopup="true" aria-expanded="false" aria-controls="menu" aria-label="Navigation"><div class="hamburger-button"><div></div><div></div><div></div></div></button>
            {{/if}}
            {{navigation}}
        </nav>
</header>
<main>
    <article class="{{post_class}} post-full">
        <header>
            <div class="post-header-background{{#if feature_image}} with-image" style="background-image: url({{feature_image}}){{/if}}">
                <h1 class="post-title">{{title}}</h1>
            </div>
        </header>
        <section class="post-meta">
            <div>
                <time pubdate="pubdate" datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="D MMMM YYYY"}}</time>
            </div>
        </section>
        <section class="post-content">
            {{content}}
        </section>
        <footer class="post-footer">
            {{#if tags}}
                <ul class="post-tags-list">
                    {{#foreach tags}}
                        <li>
                            <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                        </li>  
                    {{/foreach}}
                </ul>
            {{/if}}
            <div>Share icons</div>
        </footer>
    </article>
</main>
<footer class="site-footer">
    <div class="footer-contact">
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-envelope" aria-hidden="true" href="mailto:marko@markopapic.com" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-facebook" aria-hidden="true" href="https://www.facebook.com/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-twitter" aria-hidden="true" href="https://www.twitter.com/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-linkedin" aria-hidden="true" href="https://www.linkedin.com/in/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-skype" aria-hidden="true" href="skype:live:marko_3268?userinfo" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-github" aria-hidden="true" href="https://github.com/markopapic" target="_blank"></a>
        </div>
    </div>
    <div class="footer-copyright">&copy; <span class="footer-site-title">{{@blog.title}}</span> all rights reserved.</div>
</footer>

{{/post}}

{{#contentFor "scripts"}}
    <script src="{{asset "js/highlight.min.js"}}"></script>
    <script>hljs.initHighlightingOnLoad();</script> 
{{/contentFor}}