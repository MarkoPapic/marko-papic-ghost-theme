{{!< default}}

<header class="site-header {{#if @blog.cover_image}} with-cover" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="blog-meta">
        {{#if @blog.logo}}
            <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
        {{/if}}
        <h1 class="site-title">{{@blog.title}}</h1>
        <div class="site-description">{{@blog.description}}</div>
    </div>
    <nav class="site-navigation">
    {{#if @blog.navigation}}
        <button id="navigation-menu-button" class="menu-button" aria-haspopup="true" aria-expanded="false" aria-controls="menu" aria-label="Navigation"><div class="hamburger-button"><div></div><div></div><div></div></div></button>
    {{/if}}
    {{navigation}}
  </nav>
</header>

<main>
    <div class="post-feed">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>
</main>

<footer>Something here</footer>

{{#contentFor "scripts"}}
<script src="{{asset "js/navigation-menu-toggle.js"}}"></script>
{{/contentFor}}