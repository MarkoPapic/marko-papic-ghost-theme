{{!< default}}

<header class="site-header {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    {{#if @blog.logo}}
        <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
    {{/if}}
  <h1 class="page-title">{{@blog.title}}</h1>
  <div class="page-description">{{@blog.description}}</div>    
</header>

<main>
    {{#foreach posts}}
        {{> "post-card"}}
    {{/foreach}}
</main>

<footer>Something here</footer>