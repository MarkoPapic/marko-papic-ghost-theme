{{!< default}}

<header class="site-header">
    <div class="site-header-background {{#if @blog.cover_image}} with-cover" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
        <div class="header-corner-buttons">
            <a class="fa fa-rss" title="RSS" href="{{@blog.url}}/rss/"></a>
        </div>
        <div class="blog-meta">
            {{#if @blog.logo}}
                <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
            {{/if}}
            <h1 class="site-title">{{@blog.title}}</h1>
            <div class="site-description">{{@blog.description}}</div>
        </div>
    </div>
    <nav id="sticky-nav" class="site-navigation">
    {{#if @blog.navigation}}
        <button id="navigation-menu-button" class="menu-button" aria-haspopup="true" aria-expanded="false" aria-controls="menu" aria-label="Navigation"><div class="hamburger-button"><div></div><div></div><div></div></div></button>
    {{/if}}
    {{navigation}}
  </nav>
</header>

<main id="after-sticky-nav">
    <div class="post-feed">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>
    {{pagination}}
</main>

{{#if @labs.subscribers}}
    <section class="subscribe-section-inline">
        <h3>Subscribe to Newsletter</h3>
        {{subscribe_form
            form_class="subscribe-form-inline"
            input_class="subscribe-input"
            button_class="btn subscribe-btn"
            placeholder="Your email address"
        }}
    </section>
{{/if}}

<footer class="site-footer">
    <div class="footer-contact">
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-envelope" title="Email" href="mailto:marko@markopapic.com" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-twitter" title="Twitter" href="https://www.twitter.com/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-linkedin" title="LinkedIn" href="https://www.linkedin.com/in/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-skype" title="Skype" href="skype:live:marko_3268?userinfo" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-github" title="GitHub" href="https://github.com/markopapic" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-facebook" title="Facebook" href="https://www.facebook.com/papicmarko" target="_blank"></a>
        </div>
        <div class="contact-link-wrapper">
            <a class="contact-link fa fa-instagram" title="Instagram" href="https://www.instagram.com/marko__papic" target="_blank"></a>
        </div>
    </div>
    <div class="footer-copyright">&copy; <span class="footer-site-title">{{@blog.title}}</span> all rights reserved.</div>
</footer>

{{#contentFor "scripts"}}
    <script src="{{asset "js/sticky-navigation.js"}}"></script>
{{/contentFor}}